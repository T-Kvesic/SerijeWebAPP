@model SerijeWebAPP.Models.Serija

<h1>View HTML stranica - Update</h1>
<h4>Ažuriraj seriju @Model.Naziv</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StreamingServis" class="control-label"></label>
                <input asp-for="StreamingServis" class="form-control" />
                <span asp-validation-for="StreamingServis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrojSezona" class="control-label"></label>
                <input asp-for="BrojSezona" class="form-control" />
                <span asp-validation-for="BrojSezona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PotrebnoVrijeme" class="control-label">Potrebno vrijeme (u satima)</label>
                <div class="input-group">
                    <input asp-for="PotrebnoVrijeme" class="form-control" type="number" step="1" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Preporuka" class="control-label"></label>
                <input asp-for="Preporuka" class="form-control" />
                <span asp-validation-for="Preporuka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SlikaUrl" class="control-label"></label>
                <input asp-for="SlikaUrl" class="form-control" />
                <span asp-validation-for="SlikaUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategorijaId" class="control-label"></label>
                <select asp-for="KategorijaId" class="form-control" asp-items="ViewBag.KategorijaId"></select>
                <span asp-validation-for="KategorijaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag na popis serija</a>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }

}
